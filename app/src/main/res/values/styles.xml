<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearance">@style/DefaultText</item>
        <!--<item name="android:checkboxStyle">@style/AppCheckBox</item>-->
        <!--<item name="android:switchStyle">@style/AppSwitch</item>-->
        <item name="android:windowBackground">@color/bg_grey</item>
        <!--<item name="android:statusBarColor">@color/colorPrimary</item>-->
    </style>



    <!-- Text styles -->

    <style name="DefaultText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="TextNormal" parent="DefaultText">
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="TextNormal.White" parent="TextNormal">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="TextNormal.White.Bold" parent="TextNormal.White">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextNormal.Black.Bold" parent="DefaultText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextNormal.Grey" parent="TextNormal">
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="TextSmall" parent="DefaultText">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="TextSmall.Black" parent="TextSmall">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="TextSmall.Grey" parent="TextSmall">
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="TextSmall.White" parent="TextSmall">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="TextSmall.White.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSmall.Black.Bold" parent="TextSmall.Black">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextXSmall" parent="DefaultText">
        <item name="android:textSize">@dimen/xsmall_text_size</item>
    </style>

    <style name="TextXSmall.White" parent="TextXSmall">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="TextXSmall.White.Bold" parent="TextXSmall.White">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextXSmall.Burgundy">
        <item name="android:textColor">@color/text_burgundy</item>
    </style>

    <style name="TextXSmall.Black">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="TextXSmall.Gold">
        <item name="android:textColor">@color/text_gold</item>
    </style>

    <style name="TextXSmall.Gold.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextXSmall.Black.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextXSmall.Grey">
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="TextXSmall.Grey.Bold">
        <item name="android:textStyle">bold</item>
    </style>



    <style name="TextLarge" parent="DefaultText">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="TextLarge.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextLarge.Black" parent="TextLarge">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="TextLarge.Black.Bold" parent="TextLarge.Black">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextXLarge" parent="DefaultText">
        <item name="android:textSize">@dimen/xlarge_text_size</item>
    </style>

    <style name="TextXLarge.Black" parent="TextXLarge">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="TextXLarge.Black.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextXLarge.Grey">
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="TextXXLarge" parent="DefaultText">
        <item name="android:textSize">@dimen/xxlarge_text_size</item>
    </style>

    <style name="TextXXLarge.Black">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="TextXXLarge.Black.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextXXXLarge" parent="DefaultText">
        <item name="android:textSize">@dimen/xxxlarge_text_size</item>
    </style>

    <style name="TextXXXLarge.Black">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="TextXXXLarge.Black.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Buttons -->

    <style name="Button" parent="TextNormal.Black.Bold">
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="TextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/text_grey</item>
        <item name="colorControlHighlight">@color/text_black</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="colorControlNormal">@color/text_black</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:gravity">top</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="TextInputEditTextMultiline">
        <item name="android:gravity">top</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:inputType">textCapSentences</item>
    </style>
</resources>
